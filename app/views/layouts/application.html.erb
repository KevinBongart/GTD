<!DOCTYPE html>
<html>
<head>
  <title>GTD</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>
  <div id="header">
    <h1>To Do</h1>
  </div>
  <div class="container-fluid">
      <div class="sidebar">
        <p><%= link_to "Inbox", tasks_path(:view => "inbox") %> (<%= @inbox_count %>)</p>
        <p><%= link_to "Today", tasks_path %></p>
        <p>Projects:</p>
        <ul>
          <% @projects.each do |project| %>
            <li><%= link_to project.name, project %></li>
          <% end %>
          <li><%= link_to "Add a project", new_project_path %></li>
        </ul>
        <p>Zones:</p>
        <ul>
          <% @zones.each do |zone| %>
            <li><%= link_to zone.name, zone %></li>
          <% end %>
          <li><%= link_to "Add a zone", new_zone_path %></li>
        </ul>

      </div>
      <div class="content">
        <%= yield %>
      </div>
    </div>
</body>
</html>
