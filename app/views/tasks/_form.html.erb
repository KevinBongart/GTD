<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="clearfix">
    <%= f.label :name %>
    <div class="input">
      <%= f.text_field :name %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :due_date %>
    <div class="input">
      <%= f.date_select :due_date %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :project_id %>
    <div class="input">
      <%= f.collection_select(:project_id, Project.all, :id, :name, :prompt => true) %>
    </div>
  </div>
  <div class="clearfix">
    <%= f.label :zone_id %>
    <div class="input">
      <%= f.collection_select(:zone_id, Zone.all, :id, :name, :prompt => true) %>
    </div>  
  </div>

  <div class="actions">
    <%= f.submit :class => "btn primary" %>
  </div>
<% end %>
